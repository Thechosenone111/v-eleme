.cartControl
    font-size: 0
    .cart-decrease,.cart-add
        display: inline-block
        padding: .08rem .12rem .12rem .12rem
        &.fade-enter-active,&.fade-leave-active
            transition: all .4s linear
        &.fade-enter, &.fade-leave-active
            opacity: 0
            transform: translate3d(.48rem, 0, 0)
        .inner
            display: inline-block
            line-height: .48rem
            font-size: .48rem
            vertical-align: top
            color: rgb(0, 160, 220, .2)
            &.inner-enter-active, &.inner-leave-active
                transition: all 0.4s linear
                transform: rotate(0)
            &.inner-enter, &.inner-leave-active
                opacity: 0
                transform: rotate(180deg)
    .cart-count
        display: inline-block
        line-height: .48rem
        font-size: .2rem
        width: .24rem
        padding-top: .12rem
        //没有设置垂直居上的话就会导致左边不对齐
        vertical-align: top
        text-align: center
        color: rgb(147, 153, 159)
    .cart-add
        line-height: .48rem
        padding: .12rem
        font-size: .48rem
        vertical-align: top
        color: rgb(0 , 160, 220 , 0.2)