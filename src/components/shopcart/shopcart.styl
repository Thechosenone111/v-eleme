@import '../../common/stylus/mixin'
    .shopcart
        position: fixed
        left: 0
        bottom: 0
        z-index 50
        width: 100%
        height: .96rem
        background-color: #cccccc
        .content
            display: flex
            background: #141d27
            .content-left
                flex: 1
                font-size: 0
                .logo-wrapper
                    display: inline-block
                    position: relative
                    top: -.2rem
                    margin: 0 .24rem
                    padding: .12rem
                    width: 1.12rem
                    height 1.12rem
                    box-sizing: border-box
                    vertical-align: top
                    border-radius: 50%
                    background-color: #141d27
                    .logo
                        width: 100%
                        height: 100%
                        text-align: center
                        border-radius: 50%
                        background-color: #2b343c
                        &.highlight
                            background-color: rgb(0, 160, 220)
                        .icon-gouwuche
                            font-size: .48rem
                            line-height: .88rem
                            color: #80858a
                            &.highlight
                                color: rgb(255, 255, 255)
                    .num
                        position: absolute
                        top: 0
                        right: 0
                        width: .48rem
                        height: .32rem
                        line-height: .32rem
                        text-align: center
                        border-radius: .32rem
                        color: rgb(255, 255, 255)
                        font-size: .18rem
                        font-weight: 700
                        background-color: rgb(240, 20, 20)
                        box-shadow: 0 .08rem .16rem rgba(0, 0, 0, .4)
                .price
                    display: inline-block
                    vertical-align: top
                    margin-top: .24rem
                    padding-right: .24rem
                    padding-right: .24rem
                    line-height: .48rem
                    border-right: 1px solid rgba(255, 255, 255, .1)
                    font-size: .32rem
                    box-sizing: border-box
                    color: rgba(255, 255, 255, .4)
                    font-weight: 700
                    &.highlight
                        color: #ffffff
                .desc
                    display: inline-block
                    vertical-align: top
                    margin: .24rem 0 0 .24rem
                    font-size: .2rem
                    font-weight: 700
                    line-height: .48rem
                    color: rgba(255,255,255,0.4)
            .content-right
                flex: 0 0 2.1rem
                width: 2.1rem
                .pay
                    height: .96rem
                    line-height: .96rem
                    text-align: center
                    font-size: .24rem
                    font-weight: 700
                    color: rgba(255,255,255,0.4)
                    background-color: #2b333b
                    &.not-enough
                        background-color: #2b333b
                    &.enough
                        background-color: #00b43c
                        color: #fff