@import "../../common/stylus/mixin.styl"
.header
    position :relative
    background: rgba(7,17,27,.5)
    color: #fff
    overflow: hidden
    .content-wrap
        position: relative
        padding: .48rem 0.24rem 0.36rem .48rem
        font-size: 0
        .avatar
            display: inline-block
            vertical-align: top 
            .avatarimg
                display: block
                width: 1.28rem
                height: 1.28rem
                border-radius: .02rem
        .content
            display: inline-block
            vertical-align: top 
            margin-left: .32rem
            .title
                .brand
                    display: inline-block
                    width: .6rem
                    height .36rem
                    vertical-align: top
                    bg-image("brand")
                    background-size: contain
                    background-repeat: no-repeat
                .name
                    margin-left: .12rem
                    font-size: .36rem
                    color: #fff
                    font-weight: bold
                    line-height: .36rem
            .desc
                margin: .16rem 0 .2rem
                font-size: .24rem
                color: #fff
                font-weight: 200
                line-height: .24rem
            .support
                .brand
                    display: inline-block
                    vertical-align: top
                    width: .24rem
                    height .24rem
                    background-size: .24rem .24rem
                    background-repeat: no-repeat
                    &.decrease  
                        bg-image("decrease_1") 
                    &.discount  
                        bg-image("discount_1")
                    &.special  
                        bg-image("special_1")
                    &.invoice  
                        bg-image("invoice_1")
                    &.guarantee  
                        bg-image("guarantee_1")
                .text
                    display: inline-block
                    vertical-align: top 
                    margin-left: .08rem
                    font-size: .2rem
                    line-height: .24rem
                    font-weight: 200
                    color: rgb(255,255,255)
            .supports-count
                position: absolute
                right 0.24rem
                bottom: .2rem
                padding: .14rem .16rem
                border-radius: 2rem
                background:rgba(0,0,0,.2)
                .count   
                    display: inline-block
                    vertical-align: middle
                    font-size: .2rem
                    color: rgb(255,255,255)
                    line-height: .24rem
                    font-weight: 200
                .arrowright
                    display: inline-block
                    vertical-align: middle
                    margin-left: .04rem
                    font-size: .2rem
    .bulletin-wrapper
        position: relative
        padding: 0 0.44rem 0 .24rem
        height :.56rem
        line-height: .56rem
        background: rgba(7,17,27,.2)    
        overflow:hidden
        white-space: nowrap
        text-overflow: ellipsis   
        .bulletin-title
            display: inline-block
            vertical-align: top
            width: .44rem
            height 0.24rem
            margin-right: .08rem
            margin-top: .16rem
            background-size: 100% 100%
            background-repeat: no-repeat 
            bg-image("bulletin")
        .bulletin-text
            display: inline-block
            vertical-align: top
            font-size: .2rem
            color: rgb(255,255,255) 
            font-weight: 200
        .icon
            position: absolute
            right :0.24rem
            top: 0
            font-size: .1rem
    .background
        position: absolute
        top: 0
        left: 0
        width: 100%
        height :100%
        z-index: -1
        filter: blur(.2rem)
        -webkit-filter: blur(.2rem)
        img
            width: 100%
            height 100%
    .detail
        position: fixed
        z-index :100
        top: 0
        left:0
        width: 100%
        height :100%
        background: rgba(7,17,27,.8)
        overflow: auto
        .detail-wrap
            min-height: 100%
            padding: 0 .72rem
        .detail-main
            margin-top: 1.28rem
            padding-bottom: 1.28rem
            text-align: center   
            .name
                font-size: .32rem
                font-weight: 700
                color: #fff
                line-height: .32rem
            .star-wrap
                margin-top: .32rem
                padding: .04rem 0
            .title
                display: flex
                margin: .56rem auto .48rem auto
                .line
                    flex:1
                    position:relative
                    top: -6px
                    border-bottom:1px solid rgba(255,255,255,.2)
                .text
                    padding:0 .24rem
                    font-size:.28rem
                    font-weight:700
            .supports
                .support-item
                    padding: 0 .24rem
                    margin-bottom: .24rem
                    font-size: 0
                    text-align: left 
                    &:last-child
                        margin-bottom: 0
                    .icon
                        display: inline-block
                        width: .32rem
                        height .32rem
                        margin-right: .12rem
                        vertical-align: top
                        background-size: .32rem .32rem
                        background-repeat: no-repeat
                        &.decrease
                          bg-image('decrease_2')
                        &.discount
                          bg-image('discount_2')
                        &.guarantee
                          bg-image('guarantee_2')
                        &.invoice
                          bg-image('invoice_2')
                        &.special
                          bg-image('special_2')
                    .text
                        font-size: .24rem
                        line-height: .32rem
                        font-weight: 200
            .bulletin
                .content
                    padding: 0 .24rem
                    font-size: .24rem
                    line-height: .48rem
                    font-weight: 200
                    text-align: justify
        .detail-close
            position: relative
            width: .64rem
            height :.64rem
            font-size: .64rem
            clear: both
            margin: -1.28rem auto 0



                    
                    

                    




